<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Must_Add_Cancellation_Reason</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISBLANK(TEXT(Cancellation_Reason__c) ),  NOT(ISBLANK( End_Date__c ))  )</errorConditionFormula>
    <errorMessage>Please add cancellation reason when cancelling the campaign.</errorMessage>
</ValidationRule>
