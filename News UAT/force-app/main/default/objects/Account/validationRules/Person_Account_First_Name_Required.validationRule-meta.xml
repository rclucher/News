<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Person_Account_First_Name_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(RecordType.Name = &quot;Private Party&quot;, ISBLANK(FirstName))</errorConditionFormula>
    <errorMessage>You must enter a First Name for a Private Party before Saving the record.</errorMessage>
</ValidationRule>
